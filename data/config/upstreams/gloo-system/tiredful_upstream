apiVersion: gateway.solo.io/v1
kind: VirtualService
metadata:
  name: tiredful
  namespace: gloo-system
spec:
  virtualHost:
    domains:
      - '*'
    routes:
      - matchers:
         - prefix: /
        routeAction:
          single:
            upstream:
              name: tiredful
              namespace: gloo-system
        options:
          autoHostRewrite: true
